#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=../lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

if echo "$ASDF_INSTALL_VERSION" | grep -qF '-'; then
  fail "Supporting zigmod version since v51. However v21...v50 might work if we look just at the assets naming styles. So this plugin does not block them."
fi

mkdir -p "$ASDF_DOWNLOAD_PATH"

release_file="$ASDF_DOWNLOAD_PATH/$TOOL_NAME-$ASDF_INSTALL_VERSION"

# `zigmod` uploads non archived binary files to the GitHub releases.
download_release "$ASDF_INSTALL_VERSION" "$release_file"
chmod 755 "$release_file"
mv "$release_file" "$ASDF_DOWNLOAD_PATH/zigmod"
